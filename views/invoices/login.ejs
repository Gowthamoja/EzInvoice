<% layout('/layouts/boilerplate') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5 mb-5">
            
            <div class="card p-4 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4 fw-bold">Log In to Your Account</h3>

                    <form action="/invoices" method="get">
                        
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Work Email Address" required>
                        </div>

                        <div class="mb-4">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        </div>

                        <!-- <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                            <label class="form-check-label small" for="rememberMe">
                                Remember me
                            </label>
                        </div> -->

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Log In</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p class="mb-1 small">
                            Don't have an account? <a href="/signup" class="text-decoration-none">Sign Up</a>
                        </p>
                        <p class="mb-0 small">
                            <a href="/forgot-password" class="text-decoration-none">Forgot Password?</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .edit, .show {
        display: none;
    }
    .navbar-toggler {
        display: none; 
    }
    
    #navbarNavAltMarkup {
        display: none !important;
    }
    .navbar-brand {
        margin-left: auto; 
        margin-right: auto;
    }
    
</style>