<% layout('/layouts/boilerplate') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card p-4 shadow-sm border-0">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold">Business Profile</h3>
                        <p class="text-muted">Final step! Enter your details for your invoices.</p>
                    </div>

                    <form action="/signup/business-details" method="POST" class="needs-validation" novalidate>
                        
                        <div class="mb-3">
                            <label for="businessName" class="form-label small text-uppercase text-muted">Business Name</label>
                            <input type="text" class="form-control" id="businessName" name="businessName" placeholder="e.g. Acme Corp" required>
                            <div class="invalid-feedback">Please provide your business name.</div>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label small text-uppercase text-muted">Phone Number</label>
                            <input type="tel" class="form-control" id="phone" name="phone" placeholder="+91 00000 00000" required>
                        </div>

                        <div class="mb-4">
                            <label for="address" class="form-label small text-uppercase text-muted">Business Address</label>
                            <textarea class="form-control" id="address" name="address" rows="3" placeholder="Full address..." required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary py-2 fw-bold">Finish Setup</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .navbar-toggler, #navbarNavAltMarkup {
        display: none !important;
    }
    .navbar-brand {
        margin-left: auto; 
        margin-right: auto;
    }
</style>